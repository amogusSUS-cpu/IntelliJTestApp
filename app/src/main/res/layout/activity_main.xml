<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/displaybutton" android:id="@+id/imageButton"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="26dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="127dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="-1dp" android:layout_marginEnd="-1dp"/>
    <TextView
            android:id="@+id/word2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="168dp"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="40dp"
            android:text="Word"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sentence" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="644dp"/>
    <TextView
            android:id="@+id/partsOfSpeech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="165dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="21dp"
            android:text="Parts Of Speech"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phonetics" android:layout_alignParentBottom="true"
            android:layout_marginBottom="242dp" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <Button
            android:id="@+id/phonetics"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="127dp"
            android:layout_height="51dp"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="94dp"
            android:text="Phonetics"
            android:textColor="#000000"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_alignParentBottom="true"
            android:layout_marginBottom="560dp" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:id="@+id/definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="21dp"
            android:text="Definition"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partsOfSpeech" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="472dp"/>
    <TextView
            android:id="@+id/sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="179dp"
            android:layout_marginLeft="179dp"
            android:layout_marginTop="15dp"
            android:text="Sentence"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/definition" android:layout_alignParentBottom="true"
            android:layout_marginBottom="520dp" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <Button
            android:id="@+id/showhide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="174dp"
            android:layout_marginLeft="174dp"
            android:layout_marginTop="44dp"
            android:text="Show"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/word2" android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <Button
            android:id="@+id/nextword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="134dp"
            android:text="Next Word"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showhide" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="63dp"/>

</RelativeLayout>